<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fosan Cloud</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <link rel="stylesheet" href="/css/library.css" type="text/css">
</head>

<body>
    <!--loader-->
    <div id="loading">
        <img id="loading-image" src="/images/ajax.gif" alt="Loading..." />
    </div>
    <div class="ui secondary menu" style=" background-color: #333; width: 100%;">
        <img src="/images/fosan4.jpg" width="15%" style="border-radius: 5px">
        <a class=" item" link href="/"
            style="border-radius: 0;border-left:2px solid #000; border-right:2px solid #000; color: rgb(255, 60, 0) !important;">
            HOME
        </a>
        <a class="item" link href="/library"
            style="border-radius: 0; border-right:2px solid #000;color: rgb(255, 60, 0) !important;">
            STREAM
        </a>
        <div class="right menu">
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
            <% if(token){ %>
            <a class="ui item" href="" style="color: rgb(255, 60, 0);">sign in</a>
            <% } else {  %>
            <a class="ui item" href="/logout" style="color: rgb(255, 60, 0);">
                Sign out
            </a>
            <% } %>
        </div>

    </div>
    <!--body-->

    <div style="width: 100%;height: ;background-color: ;">
        <div style="width: 90%;height: ;background-color: ;margin:0 auto;display: flex;">
            <div style="width: 70%;height: ;background-color: ;">
                <% data.forEach(el => { %>
                <div class="ui items" style="width: 100%; background-color: #fff !important;
                    margin: 0 auto;padding-top: 10px;padding-bottom: 10px;margin-top: 15px;">
                    <div class="item" style="align-items: center !important;">
                        <div class="image" style="width: 225px !important;padding-left: 10px;">
                            <img src="/images/song.png" style="width: 100%">
                        </div>
                        <div class=" content" style="padding: 10px;">
                            <a class=" header" href="/detail-song/<%=el.dataValues.id%>"><%=el.dataValues.Title%></a>
                            <div class="meta">
                                <span><%=el.dataValues.Artist%></span>
                            </div>
                            <div class="meta">
                                <span><%=el.dataValues.Genre%></span>
                            </div>

                            <div class="extra">
                                <audio controls>
                                    <source src="/music/<%=el.dataValues.comments%>" type="audio/mpeg">
                                    <span><%=el.dataValues.comments%></span>
                                </audio>
                            </div>
                            <!-- <div class="ui bottom attached button" style="margin:0 auto;background-color: rgb(255, 60, 0);">
                                    <i class="add icon"><a href="/comment"></i>
                                    Add Comments
                                </div> -->
                        </div>
                    </div>
                </div>
                <% }) %>

            </div>
            <div
                style="width: 30%;height: 500px;background-color: ;overflow-y: scroll;padding-left: 10px;padding-right: 10px;">
                <a class="twitter-timeline" href="https://twitter.com/SoundCloud?ref_src=twsrc%5Etfw">Tweets by
                    SoundCloud</a>
                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
        </div>
    </div>


    <!--footer-->
    <footer>
        <div class="container">
            <small>copyright &copy; 2020 - FosanCloud. All Right Reserved.</small>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous">
        </script>
    <script>
        $(document).ready(function () {

            setTimeout(function () { $('#loading').hide(800); }, 1000);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
</body>

</html>