<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fosan Cloud</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>

<body>
    <div class="ui secondary  menu" style="background-color: #333;">
        <img src="/images/fosanlogo.png" width="50px">
        <a class=" item" style="color: white;">
            Home
        </a>
        <a class="item" style="color: white;">
            Stream
        </a>
        <a class="item" href="/library" style="color: white;">
            Library
        </a>
        <div class="right menu">
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
            <a class="ui item" style="color: white;">
                Sign up
            </a>
            <a class="ui item" style="color: white;">
                Sign in
            </a>
        </div>
    </div>
    <!--body-->
    <% data.forEach(el => { %>
    <div class="ui items">
        <div class="item">
            <div class="image">
                <img src="/images/image.png">
            </div>
            <div class="content">
                <a class="header"><%=el.dataValues.Title%></a>
                <div class="meta">
                    <span><%=el.dataValues.Artist%></span>
                </div>
                <div class="meta">
                    <span><%=el.dataValues.Genre%></span>
                </div>
                <div class="description">
                </div>
                <div class="extra">
                    <span><%=el.dataValues.commnet%></span>
                </div>
                <div class="ui bottom attached button">
                    <i class="add icon"><a href="/comment"></i>
                    Add Comments
                </div>
            </div>
        </div>
    </div>
    <% }) %>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
</body>

</html>